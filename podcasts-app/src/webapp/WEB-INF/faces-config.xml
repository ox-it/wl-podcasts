<?xml version="1.0"?>
<!DOCTYPE faces-config PUBLIC
  "-//Sun Microsystems, Inc.//DTD JavaServer Faces Config 1.0//EN"
  "http://java.sun.com/dtd/web-facesconfig_1_0.dtd">

<faces-config>

<!-- add to allow internalization of the content messages -->
  <application>
    <message-bundle>org.sakaiproject.tool.podcasts.bundle.Messages</message-bundle>
    <locale-config>
      <default-locale>en</default-locale>
      <supported-locale>de</supported-locale>
      <supported-locale>fr</supported-locale>
      <supported-locale>es</supported-locale>
    </locale-config>
  </application>
    
  <!-- let the framework deal with the bean -->
  <managed-bean>
    <description>check for Resources and possibly podcasts</description>
    <managed-bean-name>podHomeBean</managed-bean-name>
    <managed-bean-class>org.sakaiproject.tool.podcasts.podHomeBean</managed-bean-class>
    <managed-bean-scope>session</managed-bean-scope>
  </managed-bean>
  <managed-bean>
    <description>Info for Add podcast page</description>
    <managed-bean-name>podcastBean</managed-bean-name>
    <managed-bean-class>org.sakaiproject.tool.podcasts.addPodcastBean</managed-bean-class>
    <managed-bean-scope>session</managed-bean-scope>
  </managed-bean>
  <managed-bean>
    <description>Bean to hold current/changed permissions</description>
    <managed-bean-name>podPerms</managed-bean-name>
    <managed-bean-class>org.sakaiproject.tool.podcasts.podPermBean</managed-bean-class>
    <managed-bean-scope>session</managed-bean-scope>
  </managed-bean>
  <managed-bean>
    <description>Bean to hold display option (Public / Site)</description>
    <managed-bean-name>podOptions</managed-bean-name>
    <managed-bean-class>org.sakaiproject.tool.podcasts.podOptionsBean</managed-bean-class>
    <managed-bean-scope>session</managed-bean-scope>
  </managed-bean>

<!--	 Need to look at how to do this, work with an interface/implementation in JSF
    <managed-property>
		<description>podcastService</description>
		<property-name>podcastService</property-name>
		<value>#{Components["org.sakaiproject.api.app.podcasts.PodcastService"]}</value>
	</managed-property>   -->

	<!-- navigation
			FROM what page TO what page
			IUPUI: path needs to be /projname/xx.jsp -->
	<navigation-rule>
	    <navigation-case>  <!-- GOTO podMain (Podcast Home) -->
	      <from-outcome>cancel</from-outcome>
	      <to-view-id>/podcasts/podMain.jsp</to-view-id>
	      <redirect />
	    </navigation-case>
	    <navigation-case>  <!-- GOTO addPodcast -->
	        <from-outcome>addPodcast</from-outcome>
	        <to-view-id>/podcasts/addPodcast.jsp</to-view-id>
	    </navigation-case>
	    <navigation-case>  <!-- GOTO podPermissions -->
	        <from-outcome>podcastPermissions</from-outcome>
	        <to-view-id>/podcasts/podPermissions.jsp</to-view-id>
	    </navigation-case>
	    <navigation-case>  <!-- GOTO podOptions -->
	        <from-outcome>podcastOptions</from-outcome>
	        <to-view-id>/podcasts/podOptions.jsp</to-view-id>
	    </navigation-case>
	    <navigation-case>  <!-- GOTO podRevise -->
	      <from-outcome>podcastRevise</from-outcome>
	      <to-view-id>/podcasts/revisePodcast.jsp</to-view-id>
	    </navigation-case>
	</navigation-rule>

</faces-config>